@mixin use-font-<%= fontConfig.fontShortName %>(){
  font-family: "<%= fontConfig.fontName %>";
  position: relative;
  display: inline-block;
  font-style: normal;
  font-weight: normal;
  margin: 0;
  line-height: 1;
  text-decoration: inherit;
  text-align: center;
  speak: none;
  font-smoothing: antialiased;
  backface-visibility: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

<% for (var idx = 0; idx < glyphs.length; idx++) { %>
$<%= fontConfig.fontShortName %>-var-<%= glyphs[idx].name %>: "\<%= glyphs[idx].codePoint %>";<% } %>
