  "type": "object",
  "properties": {
    "payment": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "storedCard": { "type": "boolean" },
        "state": { "type": "string" },
        "zipcode": { "type": "string" },
        "saveNewCardSelected": {
          "simpleTypes": {
            "enum": [ "boolean", "null"]
          }
        }
      },
